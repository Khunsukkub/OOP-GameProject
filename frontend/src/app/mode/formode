"use client";

import React from "react";
import { useRouter } from "next/navigation";
import { initGame } from "@/services/gameService";
import "./mode.css";

const ModeSelection: React.FC = () => {
  const router = useRouter();

  const selectMode = async (mode: string) => {
    try {
      // à¹€à¸£à¸µà¸¢à¸ API à¹€à¸à¸·à¹ˆà¸­à¹€à¸£à¸´à¹ˆà¸¡à¹€à¸à¸¡ à¹‚à¸”à¸¢à¸•à¸­à¸™à¸™à¸µà¹‰à¸­à¸²à¸ˆà¸ˆà¸°à¸ªà¹ˆà¸‡à¸Šà¸·à¹ˆà¸­à¸œà¸¹à¹‰à¹€à¸¥à¹ˆà¸™à¹€à¸›à¹‡à¸™à¸„à¹ˆà¸²à¸§à¹ˆà¸²à¸‡à¸à¹ˆà¸­à¸™
      await initGame(mode, "", "");
      router.push(`/start-game?mode=${mode}`);
    } catch (error) {
      alert("Error initializing game mode. Please try again.");
    }
  };

  return (
    <div className="container">
      <h1>Select Mode</h1>
      <div className="mode-buttons">
        <button onClick={() => selectMode("PVP")}>ğŸ® PLAYER VS PLAYER ğŸ®</button>
        <button onClick={() => selectMode("PVB")}>ğŸ® PLAYER VS BOT ğŸ¤–</button>
        <button onClick={() => selectMode("BVB")}>ğŸ¤– BOT VS BOT ğŸ¤–</button>
      </div>
      <button className="back-button" onClick={() => router.push("/")}>
        Back â¬…ï¸
      </button>
    </div>
  );
};

